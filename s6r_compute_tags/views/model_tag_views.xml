<?xml version="1.0" ?>
<odoo>
    <record id="view_model_tag_tree" model="ir.ui.view">
        <field name="name">model.tag.tree</field>
        <field name="model">model.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="model_id" />
                <field name="model" />
                <field name="tag_field_id" />
            </tree>
        </field>
    </record>

    <record id="view_model_tag_form" model="ir.ui.view">
        <field name="name">model.tag.form</field>
        <field name="model">model.tag</field>
        <field name="arch" type="xml">
            <form string="Server Action">
                    <header>
<!--                        <button name="create_action" string="Create Contextual Action" type="object"-->
<!--                                class="btn-primary"-->
<!--                                attrs="{'invisible':[('binding_model_id','!=',False)]}"-->
<!--                                help="Display an option in the 'More' top-menu in order to run this action."/>-->
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name" placeholder="e.g. Update order quantity"/></h1>
                        </div>
                        <group name="action_wrapper">
                            <group name="action_content">
                                <field name="model_id" options="{'no_create': True}"/>
                                <field name="model" readonly="1"/>
                            </group>
                            <group>
                                <field name="tag_field_id"/>
                                <field name="trigger_field_ids"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Python Code" name='code'>
                                <field name="compute_tags_method" widget="ace" options="{'mode': 'python'}" placeholder="Enter Python code here. Help about Python expression is available in the help tab of this document."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
        </field>
    </record>
    <record id="action_model_tag_tree" model="ir.actions.act_window">
        <field name="name">Model Tags</field>
        <field name="res_model">model.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_model_tag_tree" />
    </record>
    <menuitem
        action="action_model_tag_tree"
        id="menu_model_tag"
        parent="base.menu_custom"
        sequence="90"
        groups="base.group_system"
    />
</odoo>
